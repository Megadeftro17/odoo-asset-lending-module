<odoo>

  <!-- Alumno -->
  <record id="alumno_action" model="ir.actions.act_window">
    <field name="name">Alumnos</field>
    <field name="res_model">asset.alumno</field>
    <field name="view_mode">list,form</field>
  </record>

  <record id="alumno_view_list" model="ir.ui.view">
    <field name="name">asset.alumno.list</field>
    <field name="model">asset.alumno</field>
    <field name="arch" type="xml">
      <list>
        <field name="nombre" />
        <field name="fecha_nacimiento" />
        <field name="pasaporte" />
        <field name="fecha_caducidad_pasaporte" />
        <field name="edad" />
        <field name="compra_ids" />
      </list>
    </field>
  </record>

  <record id="alumno_view_form" model="ir.ui.view">
    <field name="name">asset.alumno.form</field>
    <field name="model">asset.alumno</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <div class="oe_title">
              <h1><field name="nombre" placeholder="Nombre del Alumno"/></h1>
          </div>
          <group>
            <group>
                <field name="fecha_nacimiento" />
                <field name="edad" />
            </group>
            <group>
                <field name="pasaporte" />
                <field name="fecha_caducidad_pasaporte" />
            </group>
          </group>
          <notebook>
              <page string="Historial de Compras">
                  <field name="compra_ids"/>
              </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Viaje -->
  <record id="viaje_action" model="ir.actions.act_window">
    <field name="name">Viajes</field>
    <field name="res_model">asset.viaje</field>
    <field name="view_mode">list,form</field>
  </record>

  <record id="viaje_view_list" model="ir.ui.view">
    <field name="name">asset.viaje.list</field>
    <field name="model">asset.viaje</field>
    <field name="arch" type="xml">
      <list>
        <field name="name" />
        <field name="fecha_salida" />
        <field name="fecha_regreso" />
        <field name="precio_base" />
        <field name="duracion_dias" />
        <field name="compra_ids" />
      </list>
    </field>
  </record>

  <record id="viaje_view_form" model="ir.ui.view">
    <field name="name">asset.viaje.form</field>
    <field name="model">asset.viaje</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <div class="oe_title">
              <h1><field name="name"/></h1>
          </div>
          <group>
            <group>
                <field name="fecha_salida" />
                <field name="fecha_regreso" />
            </group>
            <group>
                <field name="precio_base" />
                <field name="duracion_dias" />
            </group>
          </group>
          <notebook>
              <page string="Inscripciones">
                  <field name="compra_ids"/>
              </page>
              <page string="Actividades Extra">
                  <field name="actividad_extra_ids"/>
              </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Compra -->
  <record id="compra_action" model="ir.actions.act_window">
    <field name="name">Compras</field>
    <field name="res_model">asset.compra</field>
    <field name="view_mode">list,form</field>
  </record>

  <record id="compra_view_list" model="ir.ui.view">
    <field name="name">asset.compra.list</field>
    <field name="model">asset.compra</field>
    <field name="arch" type="xml">
      <list>
        <field name="codigo_reserva" />
        <field name="fecha_inscripcion" />
        <field name="alumno_id" />
        <field name="viaje_id" />
        <field name="precio_final" />
      </list>
    </field>
  </record>

  <record id="compra_view_form" model="ir.ui.view">
    <field name="name">asset.compra.form</field>
    <field name="model">asset.compra</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <div class="oe_title">
              <h1><field name="codigo_reserva"/></h1>
          </div>
          <group>
            <group>
                <field name="alumno_id" />
                <field name="viaje_id" />
            </group>
            <group>
                <field name="fecha_inscripcion" />
                <field name="precio_final" />
            </group>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Seguro Viaje -->
  <record id="seguro_viaje_action" model="ir.actions.act_window">
