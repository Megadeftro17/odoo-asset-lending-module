            <field name="viaje_ids" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Guia turistico -->
  <record id="guia_turistico_action" model="ir.actions.act_window">
    <field name="name">Guia</field>
    <field name="res_model">asset.guia.turistico</field>
    <field name="view_mode">list,form</field>
  </record>

  <record id="guia_turistico_view_list" model="ir.ui.view">
    <field name="name">asset.guia.turistico.list</field>
    <field name="model">asset.guia.turistico</field>
    <field name="arch" type="xml">
      <list>
