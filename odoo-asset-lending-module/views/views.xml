            <field name="disponible" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <menuitem id="root_menu" name="Root"/>
  <menuitem id="gestor_menu" name="Gestor" parent="root_menu"/>
  <menuitem
    id="alumno_menu"
    name="Alumnos"
    action="alumno_action"
    parent="gestor_menu"/>
  <menuitem
    id="viaje_menu"
    name="Viajes"
    action="viaje_action"
    parent="gestor_menu"/>
  <menuitem
    id="compra_menu"
    name="Compras"
    action="compra_action"
    parent="gestor_menu"/>
  <menuitem
    id="seguro_viaje_menu"
    name="Seguros"
    action="seguro_viaje_action"
    parent="gestor_menu"/>
  <menuitem
    id="actividad_extra_menu"
    name="Actividad Extra"
    action="actividad_extra_action"
    parent="gestor_menu"/>
  <menuitem
    id="guia_turistico_menu"
    name="Guia Turistico"
    action="guia_turistico_action"
    parent="gestor_menu"/>
</odoo>
