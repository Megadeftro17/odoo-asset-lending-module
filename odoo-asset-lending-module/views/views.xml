    <field name="arch" type="xml">
      <list>
        <field name="name" />
        <field name="precio" />
        <field name="tipo_cobertura" />
        <field name="compra_id" />
      </list>
    </field>
  </record>

  <record id="seguro_viaje_view_form" model="ir.ui.view">
    <field name="name">asset.seguro.viaje.form</field>
    <field name="model">asset.seguro.viaje</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name" />
            <field name="precio" />
            <field name="tipo_cobertura" />
            <field name="compra_id" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Actividad Extra -->
  <record id="actividad_extra_action" model="ir.actions.act_window">
    <field name="name">Actividades Extra</field>
    <field name="res_model">asset.actividad.extra</field>
    <field name="view_mode">list,form</field>
  </record>

  <record id="actividad_extra_view_list" model="ir.ui.view">
    <field name="name">asset.actividad.extra.list</field>
    <field name="model">asset.actividad.extra</field>
    <field name="arch" type="xml">
      <list>
        <field name="name" />
        <field name="fecha_realizacion" />
        <field name="viaje_ids" />
      </list>
    </field>
  </record>

  <record id="actividad_extra_view_form" model="ir.ui.view">
    <field name="name">asset.actividad.extra.form</field>
    <field name="model">asset.actividad.extra</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
